<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clickable="true"
    tools:context=".Login">

    <TextView
        android:id="@+id/LForgetPassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="219dp"
        android:layout_marginLeft="219dp"
        android:layout_marginTop="2dp"
        android:layout_marginEnd="80dp"
        android:layout_marginRight="80dp"
        android:text="Forget password?"
        android:textColor="#457B9D"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/LPassword" />

    <TextView
        android:id="@+id/LRegister"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="149dp"
        android:layout_marginEnd="149dp"
        android:layout_marginBottom="174dp"
        android:clickable="true"
        android:text="New user? Register"
        android:textColor="#457B9D"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/LLoginBtn"
        app:layout_constraintVertical_bias="1.0" />

    <EditText
        android:id="@+id/LPassword"
        style="@style/Widget.AppCompat.AutoCompleteTextView"
        android:layout_width="253dp"
        android:layout_height="37dp"
        android:layout_marginStart="79dp"
        android:layout_marginTop="2dp"
        android:layout_marginEnd="79dp"
        android:layout_marginBottom="2dp"
        android:drawableLeft="@drawable/password"
        android:ems="10"
        android:hint="Password"
        android:inputType="textPassword"
        android:textColor="@color/black"
        android:textColorHighlight="#A8DADC"
        android:textColorLink="#457B9D"
        android:textCursorDrawable="@color/black"
        android:textSize="16sp"
        app:layout_constraintBottom_toTopOf="@+id/LForgetPassword"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/LEmail" />

    <EditText
        android:id="@+id/LEmail"
        android:layout_width="252dp"
        android:layout_height="42dp"
        android:layout_marginStart="79dp"
        android:layout_marginLeft="79dp"
        android:layout_marginTop="49dp"
        android:layout_marginEnd="80dp"
        android:layout_marginRight="80dp"
        android:layout_marginBottom="2dp"
        android:cursorVisible="true"
        android:drawableLeft="@drawable/person"
        android:editable="true"
        android:ems="10"
        android:hint="Email"
        android:inputType="none"
        android:textColor="@color/black"
        android:textColorHighlight="#A8DADC"
        android:textColorLink="#457B9D"
        android:textCursorDrawable="@color/black"
        android:textSize="16sp"
        app:layout_constraintBottom_toTopOf="@+id/LPassword"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="128dp"
        android:layout_marginTop="40dp"
        android:layout_marginBottom="49dp"
        app:layout_constraintBottom_toTopOf="@+id/LEmail"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@tools:sample/avatars" />

    <Button
        android:id="@+id/LLoginBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="159dp"
        android:layout_marginTop="111dp"
        android:layout_marginEnd="159dp"
        android:layout_marginBottom="13dp"
        android:text="Sign in"
        app:backgroundTint="#1D3557"
        app:layout_constraintBottom_toTopOf="@+id/LRegister"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/LForgetPassword" />

    <ProgressBar
        android:id="@+id/LprogressBar"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ProgressBar
        android:id="@+id/dbProgressBar"
        style="?android:attr/progressBarStyle"
        android:layout_width="174dp"
        android:layout_height="175dp"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>