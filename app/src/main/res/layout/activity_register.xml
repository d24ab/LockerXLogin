<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Register">

  <com.google.android.material.textfield.TextInputEditText
      android:id="@+id/RPassword"
      android:layout_width="350dp"
      android:layout_height="wrap_content"
      android:layout_marginStart="30dp"
      android:layout_marginLeft="30dp"
      android:layout_marginEnd="31dp"
      android:layout_marginRight="31dp"
      android:gravity="start"
      android:hint="Password"
      android:inputType="textPassword"
      android:textAlignment="textStart"
      android:textAllCaps="false"
      android:textSize="16sp"
      app:layout_constraintBottom_toTopOf="@+id/textView4"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="0.5"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/RPhone" />

  <com.google.android.material.textfield.TextInputEditText
      android:id="@+id/RPhone"
      android:layout_width="350dp"
      android:layout_height="wrap_content"
      android:layout_marginStart="30dp"
      android:layout_marginLeft="30dp"
      android:layout_marginEnd="31dp"
      android:layout_marginRight="31dp"
      android:layout_marginBottom="30dp"
      android:gravity="start"
      android:hint="Phone number"
      android:inputType="phone"
      android:textAlignment="textStart"
      android:textAllCaps="false"
      android:textSize="16sp"
      app:layout_constraintBottom_toTopOf="@+id/RPassword"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="0.5"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/REamil" />

  <com.google.android.material.textfield.TextInputEditText
      android:id="@+id/REamil"
      android:layout_width="350dp"
      android:layout_height="wrap_content"
      android:layout_marginStart="30dp"
      android:layout_marginLeft="30dp"
      android:layout_marginEnd="31dp"
      android:layout_marginRight="31dp"
      android:layout_marginBottom="30dp"
      android:gravity="start"
      android:hint="Email Address"
      android:inputType="textEmailAddress"
      android:textAlignment="textStart"
      android:textAllCaps="false"
      android:textSize="16sp"
      app:layout_constraintBottom_toTopOf="@+id/RPhone"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="0.5"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/RName" />

  <ImageView
      android:id="@+id/imageView2"
      android:layout_width="wrap_content"
      android:layout_height="128dp"
      android:layout_marginTop="40dp"
      android:layout_marginBottom="70dp"
      app:layout_constraintBottom_toTopOf="@+id/RName"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="0.5"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      tools:srcCompat="@tools:sample/avatars" />

  <com.google.android.material.textfield.TextInputEditText
      android:id="@+id/RName"
      android:layout_width="350dp"
      android:layout_height="wrap_content"
      android:layout_marginStart="30dp"
      android:layout_marginLeft="30dp"
      android:layout_marginEnd="31dp"
      android:layout_marginRight="31dp"
      android:layout_marginBottom="30dp"
      android:gravity="start"
      android:hint="Name"
      android:textAlignment="textStart"
      android:textAllCaps="false"
      android:textSize="16sp"
      app:layout_constraintBottom_toTopOf="@+id/REamil"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/imageView2" />

  <Button
      android:id="@+id/RRegisterBtn"
      android:layout_width="wrap_content"
      android:layout_height="48dp"
      android:layout_marginTop="40dp"
      android:layout_marginBottom="30dp"
      android:text="Register"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/textView4" />

  <TextView
      android:id="@+id/textView4"
      android:layout_width="350dp"
      android:layout_height="wrap_content"
      android:layout_marginStart="30dp"
      android:layout_marginLeft="30dp"
      android:layout_marginEnd="31dp"
      android:layout_marginRight="31dp"
      android:text="At least 8 characters including at least 1 special character, 1 uppercase letter, 1 lowercase letter and 1 number"
      android:textSize="10sp"
      android:textStyle="italic"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/RPassword" />

  <ProgressBar
      android:id="@+id/LprogressBar"
      style="?android:attr/progressBarStyle"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:background="@color/white"
      android:visibility="invisible"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent" />

  <TextView
      android:id="@+id/alreadyRegisterText"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="Already Registered? Log in here!"
      android:textColor="#2196F3"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="0.497"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      app:layout_constraintVertical_bias="0.754" />

</androidx.constraintlayout.widget.ConstraintLayout>